<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LinkTrim - URL Shortener</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">

    <!-- Navbar -->
    <nav class="bg-white shadow-lg">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <div class="ml-3 text-3xl font-bold text-gray-800">
                <p><a href="http://localhost:5000">LinkTrim</a></p>
            </div>
            <div class="flex space-x-4">
                <!-- New Button to Display Clicks -->
                <button id="show-clicks-btn" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-white hover:text-green-500 hover:border-green-500 border-transparent hover:border border">
                    Show Clicks
                </button>
                <!-- Log In Button -->
                <!-- <button class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-white hover:text-blue-500 hover:border-blue-500 hover:border transition">Log In</button> -->
                <!-- Sign Up Button -->
                <!-- <button class="border border-blue-500 text-blue-500 px-4 py-2 rounded-lg hover:bg-blue-500 hover:text-white transition">Sign Up</button> -->
            </div>
        </div>
    </nav>

    <!-- Main Section -->
    <section class="container mx-auto mt-16 mb-16">
        <div class="bg-white shadow-md rounded-lg p-8 max-w-lg mx-auto">
            <form method="POST" action="/url" class="space-y-4">
                <label for="url" class="block text-lg font-medium text-gray-700">Enter your Original URL</label>
                <div class="flex items-center space-x-2">
                    <input type="text" id="url" name="url" placeholder="https://example.com" class="flex-1 border border-gray-300 px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <button type="submit" class="bg-orange-500 text-white px-6 py-2 rounded-lg hover:bg-orange-600 transition">Generate</button>
                </div>
            </form>

            <!-- Output Section -->
            <div class="mt-6">
                <% if (locals.id) { %>
                    <div class="text-center text-blue-600">
                        <p>URL Generated: <a href="http://localhost:5000/url/<%= id %>" class="underline">http://localhost:5000/url/<%= id %></a></p>
                    </div>
                <% } %>
            </div>

            <!-- Clicks Table (Initially Hidden) -->
            <div id="clicks-table" class="mt-8 hidden overflow-x-auto">
                <% if (locals.urls) { %>
                    <table class="min-w-full border-collapse border border-gray-300">
                        <thead>
                            <tr class="bg-gray-100">
                                <th class="border px-4 py-2">S. No</th>
                                <th class="border px-4 py-2">ShortID</th>
                                <th class="border px-4 py-2">Redirect</th>
                                <th class="border px-4 py-2">Clicks</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% urls.forEach((url, index)=> { %>
                                <tr>
                                    <td class="border px-4 py-2"><%= index+1 %></td>
                                    <td class="border px-4 py-2"><%= url.shortId %></td>
                                    <td class="border px-4 py-2"><%= url.redirectURL %></td>
                                    <td class="border px-4 py-2"><%= url.visitHistory.length %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>
    </section>

    <script>
        document.getElementById('show-clicks-btn').addEventListener('click', function() {
            var clicksTable = document.getElementById('clicks-table');
            if (clicksTable.classList.contains('hidden')) {
                clicksTable.classList.remove('hidden');
            } else {
                clicksTable.classList.add('hidden');
            }
        });
    </script>

</body>

</html>


